
@{
    ViewBag.Title = "Galeri";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Devrekani Şehitler Kütüphanesi</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <h2>Kütüphanemizden Fotoğraflar</h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:500px;height:250px">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">

                    <img src="~/web2/Resimler/1.jpg" alt="Devrekani Şehitler Kütüphanesi" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/web2/Resimler/2.jpg" alt="Devrekani Şehitler Kütüphanesi" style="width:100%;">
                </div>

                <div class="item">
                    <img src="~/web2/Resimler/4.jpg" alt="Devrekani Şehitler Kütüphanesi" style="width:100%;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <br />
    <br />
</body>
</html>
<div style="margin-top:150px">
    <form action="/istatistikler/resimyukle" method="post" enctype="multipart/form-data">

        <input type="file" name="resim" id="resim" class="btn btn-primary" />
        <br />
        <input type="submit" value="Kaydet" class="btn btn-warning" />

    </form>
  
</div>
