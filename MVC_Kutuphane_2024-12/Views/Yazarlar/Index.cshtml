@using Devrekani_Sehitler_Kutuphanesi.Models.Entity
@model List<TBL_YAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>
@using (Html.BeginForm("Index", "Yazarlar", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px;">
        <b>Aranacak Yazar Adını Giriniz:&nbsp;</b>
        @Html.TextBox("p")
        <input type="submit" value="Ara" />
        @*<input type="text" class="form-control" placeholder="Kitap Ara..."  />*@
    </div>
}
<table class="table table-bordered">
    <tr style="background-color:rgb(252,178,22)">
        <th>ID</th>
        <th>Adı</th>
        <th>Soyadı</th>
        
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Yazarın Kitapları</th>
    </tr>
    @foreach (var y in Model)
    {
<tr>
    <td>@y.ID</td>
    <td>@y.AD</td>
    <td>@y.SOYAD</td>
  
    <td>@Html.ActionLink("Sil", "YazarSil", new { id = y.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz ?')" }) </td>
    <td><a href="/Yazarlar/YazarGetir/@y.ID" class="btn btn-warning">Güncelle</a></td>
    <td><a href="/Yazarlar/YazarKitaplar/@y.ID" class="btn btn-default" style="background-color:lightcoral; color:white">Yazarın Kitapları</a></td>

</tr>
    }

</table>
@*<a class="btn btn-primary" href="/Yazarlar/YazarEkle/">Yeni Yazar Ekle</a>*@
